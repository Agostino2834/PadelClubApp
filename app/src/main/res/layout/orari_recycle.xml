<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_orario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="9:10"
        android:textColor="@color/primary"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/orologio_icon"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_prenotazione"
        android:drawablePadding="10dp"
        android:text="premi per prenotare"
        app:layout_constraintStart_toEndOf="@id/txt_orario"
        app:layout_constraintTop_toTopOf="@id/txt_orario"
        app:layout_constraintBottom_toBottomOf="@id/txt_orario"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/txt_orario" />

</androidx.constraintlayout.widget.ConstraintLayout>