<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PadelClubApp" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="Theme.PadelClubApp" parent="Base.Theme.PadelClubApp" />
</resources>